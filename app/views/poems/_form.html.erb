<%= simple_form_for [@user, @poem] do |f| %>
  <%= f.error_notification %>
    <%= f.input :title, :label => "Title", :input_html => { :class => 'input-field', :class => "span8"}, :autofocus => true %>
    <%= f.input :content, :label => "Poem", :input_html => { :class => "span8 poem-text", :rows => 10 } %>
    <%= f.input :language, :label => "Poem language", :collection => [ 'ruby', 'generic', 'c', 'c#', 'css', 'd', 'go', 'haskell', 'html', 'java', 'javascript', 'lua', 'php', 'python', 'r', 'ruby', 'scheme', 'shell', 'smalltalk' ], :default => "generic" %>
    <%= f.input :tag_list, :label => 'Tags for poem (comma separated):', :input_html => { :class => 'input-field'} %>

    <%= f.button :submit, :class => 'btn btn-inverse' %>

<% end %>
